<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        >
        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:src="@drawable/logo"
            android:textAlignment="center"
            />

        <TextView
            android:id="@+id/header_message"
            android:text="Enter your email or your last name to log in"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            />
        <EditText
            android:id="@+id/editTextIdentifiant"
            android:hint="Email or last name"
            android:layout_width="match_parent"
            android:drawableLeft="@drawable/ic_person_black_24dp"
            android:drawablePadding="10dp"
            android:padding="10dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"/>
        <EditText
            android:id="@+id/editTextPassword"
            android:hint="Password"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:drawableLeft="@drawable/ic_vpn_key_black_24dp"
            android:drawablePadding="10dp"
            android:layout_marginTop="10dp"
            android:autofillHints="" />

        <Button
            android:id="@+id/buttonLogin"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="@drawable/login_button"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:text="Login"
            android:textColor="#FFFFFF" />
     <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:text="OR "/>

        <com.google.android.gms.common.SignInButton
            android:id="@+id/sign_in_button"
            android:layout_width="250dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content" />



    </LinearLayout>
    <TextView
        android:id="@+id/textViewFPassword"
        android:layout_below="@id/linearLayout"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorAccent"
        android:text="Password forgotten?"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</RelativeLayout>